{
    "name": "bem-modules",
    "private": true,
    "scripts": {
        "prepare": "npm run compile && husky install",
        "develop": "tsc -b tsconfig.build.json --watch",
        "deploy": "echo check_git && npm run compile && echo push_npm",
        "compile": "tsc -b tsconfig.build.json",
        "clean": "rimraf \"packages/**/lib\" \"packages/**/*.tsbuildinfo\"",
        "validate": "npm run validate-types && npm run validate-style && npm run validate-test",
        "validate-types": "tsc -b tsconfig.build.json",
        "validate-style": "eslint \"packages/*/src/**/*.{ts,tsx}\" --fix",
        "validate-test": "jest"
    },
    "devDependencies": {
        "husky": "7.0.0",
        "lint-staged": "11.0.0",
        "prettier": "2.3.1",
        "rimraf": "3.0.2",
        "typescript": "4.3.5"
    },
    "workspaces": [
        "packages/eslint-config",
        "packages/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "npm run validate"
        ]
    }
}